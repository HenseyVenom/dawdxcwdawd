/* pages/bankCard/bankCardBinding/bankCardBinding.wxss */
.binding_item_wrapper{
  width: 100%;
  padding: 0 40rpx;
  height: 90rpx;
  background: white;
}
.binding_item{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100%;
  border-bottom: 1px solid #EDEDED;
  align-items: center;
  font-size: 32rpx;
  color: #121212;
}
.title{
  width: 50%;
}
.input{
  flex-grow: 1;
  text-align: right;
}
.bind_button{
  display: block;
  width: 625rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 36rpx;
  color: white;
  border-radius: 10rpx;
  margin: 166rpx auto 0;
}
.bind_button:disabled{
  background-color: #d8d8d8;
}
.type_title{
  font-size: 28rpx;
  color:#999999;
  padding: 27rpx 40rpx; 
}
.type_item{
  height: 90rpx;
  align-items: center;
  line-height: 90rpx;
  background: white;
  font-size: 32rpx;
  color: #333333;
  width: 100%;
}
.type_item text{
  flex-grow: 1;
}

.type_item image{
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}
.bind_select{
  width: 100%;
  height: 90rpx;
  align-items: center;
  font-size: 32rpx;
  color: #333333;
  background: white;
}