.list {
  width: 100%;
  height: 100%;
}

.item {
  background: white;
  margin-bottom: 18rpx;
}

.username {
  font-size: 30rpx;
  color: #333;
}

.phone {
  font-size: 30rpx;
  color: #39f;
  margin-left: 20rpx;
  text-decoration: underline;
}

.time {
  font-size: 28rpx;
  color: #333;
}

.source {
  font-size: 20rpx;
  color: #ccc;
  float: right;
  margin-top: -60rpx;
  margin-right: 28rpx;
}

.rightBox {
  margin-right: 28rpx;
  margin-top: 55rpx;
  align-items: center;
  float: right;
}
.price{
  font-size: 42rpx;
  color: #f23535;
  font-weight: bold;
}
.payWay{
  width: 110rpx;
  height: 36rpx;
  font-size: 20rpx;
  color: #999999;
  background: #f5f5f5;
  border-radius: 18rpx;
  line-height: 36rpx;
  text-align: center;
  margin-top: 12rpx;
}

.leftCourse {
  flex-grow: 1;
  color: #999;
  font-size: 26rpx;
  margin-left: 30rpx;
  margin-top: 18rpx;
  margin-bottom: 35rpx;
}

.bottom {
  width: 100%;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  background: white;
  height: 80rpx;
}

.handleButton {
  flex-grow: 1;
  font-size: 30rpx;
  align-items: center;
}

.handleButtonLong {
  width: 469rpx;
  flex-shrink: 0;
  font-size: 30rpx;
  align-items: center;
}

.buttonText {
  text-align: center;
  width: 100%;
}

.emptyView{
  height: 100%;
}
