.newFollowRecord{
  box-sizing:border-box;
  width:100%;
}
.newFollowRecord .Followinfo{
  height:90rpx;
  line-height:90rpx;
  background:#fff;
  padding:0rpx 21rpx 0rpx 33rpx;
}
.newFollowRecord .Followinfo .name{
  font-size: 32rpx;
}
.newFollowRecord .Followinfo .tell{
  font-size: 30rpx; 
  color: #cccccc;
  float:right;
}
.newFollowRecord .wenbenyu{
  background:#fff;
  margin-top:10rpx;
  padding:30rpx;
}
.newFollowRecord .wenbenyu .textimport{
  font-size:28rpx;
  width:100%;
}
.newFollowRecord .sureFollow{
  margin:123rpx auto;
}
.newFollowRecord .FollowDate{
  height: 90rpx;
  width:100%;
  display:flex;
  line-height:90rpx;
  font-size:32rpx;
  background:#fff;
  border-top:1px solid #ededed;
}
.newFollowRecord .FollowDate .communication{
  width:240rpx;
  padding-left:26rpx;

}
.newFollowRecord .FollowDate .date{
  flex:1; 
}
.newFollowRecord .FollowDate .selectdate{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  position:relative;
  
}
.newFollowRecord .FollowDate .selectdate .nextTime{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  padding-right:60rpx;
  box-sizing:border-box;
  font-size:30rpx;
  text-align:right; 
  position:absolute;
   top:0rpx;
    right: 0rpx;

}
.newFollowRecord .FollowDate .selectdate .gray{
  color: #cccccc;
  text-align:right;
   padding-right:60rpx;
   position:absolute;
   top:0rpx;
   right: 0rpx;
}
.newFollowRecord .FollowDate .selectdate .arrow_right{
  width: 16rpx;
	height: 25rpx;
  position: absolute;
  right:30rpx;
  top:33rpx;
}