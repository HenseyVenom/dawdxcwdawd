/* components/bookModal/bookDateModal.wxss */
@import '../../app.wxss';
.modal{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.2)
}
.content{
  background: white;
  border-radius: 10rpx;
  position: relative;
  width: 590rpx;
  min-height: 592rpx;
  align-items: center;
	box-shadow: 0px 2px 4.8px 0.2px rgba(153, 153, 153, 0.95);
}
.title{
  font-size: 30rpx;
  color: #333333;
  margin-top: 34rpx;
  margin-bottom: 60rpx;
}
.dateView{
  width: 481rpx;
  align-items: center;
  font-size: 32rpx;
  color: #333333;
  margin-top: 30rpx;
} 
.dateText{
  width: 398rpx;
  height: 80rpx;
  background: #f5f5f5;
  line-height: 80rpx;
  text-align: center;
  flex-shrink: 0;
}
.confirmButton{
  width: 481rpx;
  height: 80rpx;
  border-radius: 6rpx;
  font-size: 34rpx;
  line-height: 80rpx;
  text-align: center;
  color: white;
  margin-top: 109rpx;
  margin-bottom: 50rpx;
}
.close{
  width: 20rpx;
  height: 20rpx;
  padding: 16rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}