/* components/modal/modal.wxss */
@import '../../app.wxss';
.modal{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.2);
  z-index: 100;
}

.content{
  background: white;
  border-radius: 10rpx;
  position: relative;
  width: 560rpx;
  align-items: center;
	box-shadow: 0px 2px 4.8px 0.2px rgba(153, 153, 153, 0.95);
}


.confirmButton{
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  border-top: 1px solid #E5E5E5;
}