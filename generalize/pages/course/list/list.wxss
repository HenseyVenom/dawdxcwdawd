.Page{
  height: 100%;
  background: #fff;
  font-size: 28rpx;
}
.text-gray{
  color: #888;
}
.courseList{
  margin: 40rpx;
}
.courseList .courseItem{
  background: #FFFFFF;
  border: 0 solid #979797;
  border-radius: 30rpx;
  box-shadow: #ddd 0px 0px 6px;
  padding: 30rpx;
  margin-bottom: 40rpx;
}
.flex-start{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.flex-between{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.courseList .courseItem .left image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
  display: block;
}
.courseList .courseItem .right .courseName{
  font-size: 24rpx;
  margin-bottom: 14rpx;
}
.courseList .courseItem .right .flex-start .bg-pink{
  color: #fff;
  font-size: 22rpx;
  background: #F95E9F;
  border-radius: 15rpx;
  padding: 2rpx 8rpx;
  margin-right: 10rpx;
}
.courseList .courseItem .right .price{
  margin: 10rpx 0;
}
.text-pink{
  color: #FA0069;
}
.font-14{
  font-size: 28rpx;
}
.font-20{
  font-size: 40rpx;
}
.delete-line{
  color: #888;
  text-decoration: line-through;
  margin-left: 20rpx;
}
.courseList .courseItem .address{
  font-size: 24rpx;
  opacity: 0.7;
}
.courseList .courseItem .address view:first-of-type{
  width: 250rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #888;
}
.courseItem .address image{
  width: 16rpx;
  height: 22rpx;
}
.emptyView{
  width: 100%;
  height: 100vh;
}